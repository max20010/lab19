#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int m, n,y_=1;
	cout << "Введите порядок квадратной матрицы: ";
	cin >> m;
	int** a = new int* [m];
	for (int i = 0; i < m; i++) {
		a[i] = new int[m];
	}
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < m; j++) {
			//cin >> a[i][j];
			a[i][j] = rand() % 30;
		}
	}
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < m; j++) {
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 0; i <= m; i++) {
		for (int lim = i,x=m-i,y=0; lim > 0; lim--) {
			cout << a[y][x] << "\t";
			y++;
			x++;
		}
		cout << endl;
	}
	for (int i = m-1; i > 0; i--) {
		for (int lim = i, x = 0, y = y_; lim > 0; lim--) {
			cout << a[y][x] << "\t";
			y++;
			x++;
		}
		y_++;
		cout << endl;
	}
	cout << endl;
	for (int i = 0; i < m; i++) {
		delete[] a[i];
	}
	delete[] a;
}
