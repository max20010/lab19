#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int m, n, x = 0;
	cout << "Введите кол-во строк в массиве: ";
	cin >> m;
	cout << "Введите кол-во столбцов в массиве: ";
	cin >> n;
	int** a = new int* [m];
	int** a1 = new int* [m];
	for (int i = 0; i < m; i++) {
		a[i] = new int[n];
		a1[i] = new int[n];
	}
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			//cin >> a[i][j];
			a[i][j] = rand() % 30;
			a1[i][j] = a[i][j];
		}
	}
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 0; i < m/2; i++) {
		for (int j = 0; j < n/2; j++) {
			a1[i][j] = a[m/2 + i][n/2 + j];
		}
	}
	for (int i = m-1; i>(m/2)-1; i--) {
		for (int j = n-1; j>(n/2)-1; j--) {
			a1[i][j] = a[i- (m / 2)][j - (n / 2)];
		}
	}
	cout << endl;
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << a1[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 0; i < m; i++) {
		delete[] a[i];
	}
	delete[] a;
	delete[] a1;
}
