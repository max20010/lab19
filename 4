#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int m, n, x = 0;
	cout << "Введите кол-во строк в массиве: ";
	cin >> m;
	cout << "Введите кол-во столбцов в массиве: ";
	cin >> n;
	int** a = new int* [m];
	for (int i = 0; i < m; i++) {
		a[i] = new int[n];
	}
	for (int i = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			//cin >> a[i][j];
			a[i][j] = rand() % 30;
		}
	}
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 1; i < m; i++) {
		if (a[i][0] < a[i - 1][0]) {
			cout << a[i][0] << "\t" << a[i - 1][0] << endl;
			//перестановка
			for (int j = 0; j < n; j++) {
				x = a[i][j];
				a[i][j] = a[i - 1][j];
				a[i - 1][j] = x;
			}
			i--;
		}
	}
	cout << endl;
	for (int i = 0, l = 0; i < m; i++) {
		for (int j = 0; j < n; j++) {
			cout << a[i][j] << "\t";
		}
		cout << endl;
	}
	for (int i = 0; i < m; i++) {
		delete[] a[i];
	}
	delete[] a;
}
